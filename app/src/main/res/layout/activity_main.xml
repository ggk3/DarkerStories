<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:background="@drawable/background">

    <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:onClick="jogar"
            android:background="@drawable/botaojogar"
            android:textColor="#ffffff" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eloImageView"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:text="@string/jogar"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/logo" android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp" app:srcCompat="@drawable/logo"/>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:id="@+id/eloImageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="75dp" android:layout_marginStart="75dp"/>
    <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:id="@+id/button19" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="16dp"
            android:background="@drawable/gift"
            android:onClick="assistirVideo"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>