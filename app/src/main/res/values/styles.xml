<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:buttonStyle">@style/ChoiceButton</item>-->
    </style>

    <style name="LetterButton" parent="Widget.AppCompat.Button">

        <item name="android:minHeight">45dip</item>
        <item name="android:minWidth">45dip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChoiceButton">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/borda_textview</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ChoiceButtonAfterSpace">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/borda_textview</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="fullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
